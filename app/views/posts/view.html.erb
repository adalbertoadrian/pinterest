<%= render "layouts/header" %>
<div class="view_post container">
    <% if user_signed_in? %>
        <div class="row botones">
            <%=link_to content_tag(:i, '', :class => "fas fa-pencil-alt editar"), posts_edit_path(@post) %></i>
            <%=link_to content_tag(:i, '', :class => "fas fa-trash eliminar"), posts_destroy_path(@post.id) %></i>
        </div>
    <% end %>
    <div class="row imagen">
        <%= cl_image_tag(@post.img_name+@post.ext) %>
        <span class="posted_by">Posteado por <%= @post.user.name %></span>
    </div>
    <div class="row titulo"><h1><%= @post.title %></h1></div>
    <div class="row descripcion"><%= @post.description %></div>
</div>

