<div class="new_post container">
    <h1>Nuevo Post</h1>
    <%= form_for :post, :url => { :action => :create } do |f| %>
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <%= f.label :Título, for:"post_title" %>
                    <%= f.text_field :title, class:"form-control", id:"titulo" %>
                </div>
                <div class="form-group">
                    <%= f.label :Descripción, for:"post_descripcion" %>
                    <%= f.text_area :descripcion, class:"form-control", id:"descripcion", rows:15 %>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <%= f.label :Imagen, for:"post_file" %>
                    <%= f.file_field :descripcion, class:"form-control", id:"file", accept:"image/*" %>
                </div>
                <div class="form-group">
                    <div id="imagen"></div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <%= f.submit :Guardar, class:"btn btn-primary" %>
            </div>
        </div>
    <% end %>
</div>
<script>
    function filePreview(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $('#imagen + img').remove();
                $('#imagen').after('<img src="'+e.target.result+'" width="450" height="300"/>');
            }
            reader.readAsDataURL(input.files[0]);
        }
    }
    $("#file").change(function() {
        filePreview(this);
    });
</script>