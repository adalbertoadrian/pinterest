<div class="login">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-signin'  }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <h1 class="h3 mb-3 font-weight-normal text-center">Olvidaste tu contraseÃ±a?</h1>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
  </div>
  <br />
  <div class="actions">
    <%= f.submit "Enviar", class:"btn btn-lg btn-primary btn-block" %>
  </div>
  <%= render "devise/shared/links" %>
  <%= link_to "Volver", root_path %>
<% end %>
</div>